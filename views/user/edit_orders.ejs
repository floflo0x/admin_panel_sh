<%- include("../includes/head.ejs"); %>

<link rel="stylesheet" href="/style1.css">

<body class="bg-light text-white">
	<style>
		body {
			font-family: Roboto,sans-serif;
		}

		label {
			font-size: 14px;
		}

		.tabs:hover {
			color: black !important;
		}

		.dName {
			color: #337AB7;
			font-size: 14px;
		}

		.dName:hover {
			color: #337AB7 !important;
		}
	</style>

	<header class="header1">
	  	<%- include('../includes/navbar.ejs'); %>
	</header>

  	<section>
	    <div class="container-fluid p-0" style="margin-top: 45px;" id="cont1">
	      	<div class="row">
		      	<%- include('../includes/navbar1.ejs'); %>

	        	<%- include('../includes/navbar2.ejs'); %>

		       	<div class="col border text-black p-0" id="section1" style="background: #eef1f5;">
					<p class="mt-3 pt-2 pb-2 ms-2" style="font-size: 13px;">
		        		<i class="fa-solid fa-house me-2" style="color: #333333;"></i>
		        		<a href="/v1/home" class="me-2 tabs" style="text-decoration: none; color: black;">Dashboard</a><span class="me-2">/</span>
		        		<a href="/v1/products" class="me-2 tabs" style="text-decoration: none; color: black;">Ecommerce</a><span class="me-2">/</span><a href="/v1/orders" class="me-2 tabs" style="text-decoration: none; color: black;">Orders</a>
		        		<span class="me-2">/</span>
		        		<a class="me-2 tabs" style="text-decoration: none; color: grey;">
		        			Edit order<%= data[0].code %>
		        		</a>
		        	</p>
			        	<div class="row ms-5 me-5 mt-5 bg-light p-0">
			        		<div class="col-12 text-center">
						        <% if(errorMessage) { %>
						        	<div class="alert alert-danger" role="alert"><%= errorMessage %></div>
						        <% } %>
					        </div>
			        		<div class="col-12 col-sm-12 col-lg-10 p-2 border w-100 bg-light">
			        			<h5 style="font-size: 16px; font-weight: 500;">Order information #<%= Number(data[0].pid)+10000000 %></h5>
			        			<p class="mb-3">
			        				<i class="fa-solid fa-house me-2" style="color: #333333;"></i>
			        				<%= data[0].status %>
			        			</p>

			        			<div class="row bg-light" style="margin-left: 1px;">
			        				<div class="col">
			        					<% for(let i = 0; i < data.length; i++) { %>
				        					<div class="mt-3">
                            <% if(data[i].image !== null) { %>
                              <% if (data[i].image.includes("https://api.h4kig.cc/web_api/uploads/")) { %>
                                <img src="<%= data[i].image %>" width="70" height="70">
                              <% } else { %>
                                <img src="https://h4kig.com/storage/<%= data[i].image %>" alt="h4kig" width="70" height="70">
                              <% } %>
                            <% } else { %>
                              <img src="" alt="h4kig" width="70" height="70">
                            <% } %>
					        					<a href="#" class="me-2 dName"><%= data[i].name %></span></a>
				        					</div>
			        					<% } %>
			        				</div>
			        				<div class="col">
			        					<% for(let i = 0; i < data.length; i++) { %>
			        						<div class="mt-1">
			        							<%= data[i].price %>€ x <%= data[i].quantity %>
			        						</div>
			        					<% } %>

			        					<div class="mt-5 d-flex justify-content-between" 
			        						style="color: #707070; font-size: 14px;">
			        						<span>Sub amount</span><%= data[0].sub_total %>€
			        					</div>

			        					<div class="mt-1 d-flex justify-content-between"
			        						style="color: #707070; font-size: 14px;">
			        						<span>Discount</span><%= data[0].discount_amount %>€
			        					</div>

			        					<div class="mt-1 d-flex justify-content-between"
			        						style="color: #707070; font-size: 14px;">
			        						<span>Shipping fee <br>0.01 grams</span>
			        							<%= data[0].shipping_amount %>€
			        					</div>

			        					<div class="mt-1 d-flex justify-content-between"
			        						style="color: #707070; font-size: 14px;">
			        						<span>Total amount <br>Bank transfer</span>
			        							<%= data[0].amount %>€
			        					</div>

			        					<div class="mt-1 d-flex justify-content-between"
			        						style="color: #707070; font-size: 14px;">
			        						<span>Paid amount</span>
			        							<%= 0.00 %>€
			        					</div>
			        				</div>
			        			</div>

			        			<div class="mt-5 d-flex justify-content-between p-2">
			        				<span>CONFIRM ORDER</span>
			        				<button type="button" class="btn text-white" style="background: #4D97C1;">Confirm</button>
			        			</div>

			        			<div class="mt-1 d-flex justify-content-between p-2">
			        				<span>PENDING PAYMENT</span>
			        				<button type="button" class="btn text-white" style="background: #4D97C1;">Confirm payment</button>
			        			</div>

			        			<div class="mt-1 d-flex justify-content-between p-2">
			        				Crypto: <%= data[0].token %>
			        			</div>
			        		</div>
			        	</div>
				</div>
		  	</div>
		</div>
	</section>

	<script src="/script3.js"></script>

  <%- include("../includes/end.ejs"); %>
</body>