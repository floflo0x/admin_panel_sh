                            <% if (i.image && i.image.includes(".cc")) { %>
                              <img src="<%= i.image %>" width="50" height="50">
                            <% } else { %>
                              <img src="https://h4kig.com/storage/<%= i.image %>" width="50" height="50">
                            <% } %>
                          <% } else { %>
                              <img src="" width="50" height="50">
                          <% } %>
								      	</td>
								      	<td class="tName" style="font-size: 14px; color: #212529;">
								      	 	<%= i.name %>
								      	</td>
								      	<td class="tPrice" style="font-size: 14px; color: #212529;">
								      		<%= i.price %>â‚¬
								      	</td>
								      	<td class="tBT" style="font-size: 14px; color: #212529;">
								      		<%= i.stock_status %>
								      	</td>
								      	<td class="tCA" style="font-size: 14px; color: #212529;">
								      		<%= i.quantity %>
								      	</td>
								      	<td class="tCA" style="font-size: 14px; color: #212529;">
								      		-
								      	</td>
								      	<td class="tCA" style="font-size: 14px; color: #212529;">
								      		<%= i.order %>
								      	</td>
								      	<td class="tCA" style="font-size: 14px; color: #212529;">
								      		<%= i.created_at %>
								      	</td>
								      	<td class="tCA" style="font-size: 14px; color: #212529;">
								      		<%= i.status %>
								      	</td>
								      	<td>
