<%- include("../includes/head.ejs"); %>

<body class="bg-black text-white">
	<style>
		body {
  			background-image: url('h4kigImg.jpg');
  			background-repeat: no-repeat;
  			background-attachment: fixed;
  			background-position: center;
  			background-size: cover;
  			margin: 0;
            padding: 0;
		}

		.container-fluid {
            height: 100vh; /* Set the container height to full viewport height */
        }

        .col-lg-4 {
            height: 100vh;
            overflow-y: auto; /* Add scroll if content overflows */
        }

        .footer-text {
        	background-image: linear-gradient(rgba(225,225,225,0), rgba(225,225,255,0.2));
        }

        label {
        	font-size: 10px;
        	color: #58666e;
        	font-weight: 500;
        	font-family: Roboto,sans-serif;
        }

        #btn {
        	background: #02192d;
        	color: #eee !important;
        	font-size: 11px;
        	font-weight: 400;
        	text-transform: uppercase;
        	text-align: center;
        	padding: 10px 20px;
        	border-radius: none !important;
        	border: 0;
        }

        #btn:hover {
        	background: #212529;
        }
	</style>

	<section>
		<div class="container-fluid">
			<div class="row">
				<div class="col-12 text-center">
		          	<% if(errorMessage) { %>
		          	  	<div class="alert alert-danger" role="alert"><%= errorMessage %></div>
		          	<% } %>
		        </div>
				<div class="col-lg-8 d-flex flex-column justify-content-end">
					<div class="footer-text text-white">
				        <p style="font-size: 20px; font-weight: bold; margin: 20px 0px 0px 14px;">H4KIG</p>
				        <p style="font-size: 13px; margin: 10px 0px 30px 16px;">
				        	Copyright 2023 Â© H4KIG. Version: 1.17.5
				        </p>
    				</div>
				</div>
				<div class="col-12 col-sm-12 col-lg-4 border bg-light text-black d-flex flex-column justify-content-center">
					<p style="font-size: 10px; color: #757c85; font-weight: 700; font-family: Roboto,sans-serif;">SIGN IN BELOW:</p>

					<form action="/login" method="POST">
						<div class="form-floating mb-3">
						  <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
						  <label for="floatingInput">Email address</label>
						</div>
						<div class="form-floating mb-3">
						  <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
						  <label for="floatingPassword">Password</label>
						</div>
						<div class="form-check mb-4">
						  <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
						  <label class="form-check-label" for="flexCheckChecked" style="font-size: 14px; color: #333;">
						    Remember Me
						  </label>
						</div>
						<button type="submit" id="btn">sign in</button>
					</form>

					<a href="#" class="mt-4" style="text-decoration: none; color: #337AB7; font-size: 10px; font-weight: 700;">
						Lost your password?
					</a>
				</div>
			</div>
		</div>
	</section>

  <%- include("../includes/end.ejs"); %>
</body>